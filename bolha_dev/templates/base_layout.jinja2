<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="{{ url_for('static', filename='css/output.css') }}" />
  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"> </script>
</head>

<body">
  <div class="items-center justify-center pl-2 border h-12">
      <img src="{{ url_for('static', filename='images/logo_bolha_dev.svg')}}" width=13% height=13% class="p-2"/>
    </div>
    <section class="flex h-screen bg-zinc-200 ">
      <aside class="w-55   bg-white p-6">
        <nav class="mt-5 space-y-3">
          <a href="#" class="bg-white/10 group rounded flex items-center gap-4 overflow-hidden hover:bg-zinc-400 transition-colors">
            <img src="{{ url_for('static', filename='images/bar_chart.png')}}" width=20% width=20% />
            Home</a>
            <a href="#" class="bg-white/10 group rounded flex items-center gap-4 overflow-hidden hover:bg-zinc-400 transition-colors">
            <img src="{{ url_for('static', filename='images/search_more.png')}}" width=20% width=20% />
            Search Jobs</a>
        </nav>
      </aside>
      <main class="flex-1 p-6 ">
        <div class="grid grid-cols-3 gap-3 mt-1">
        
        <div class="drop-shadow-lg bg-white flex items-center rounded-2xl">
          <canvas id="top-10-posicoes" ></canvas>
        </div>

        <div class="drop-shadow-lg bg-white flex items-center rounded-2xl">
          <canvas id="nivel-profissional" ></canvas>
        </div>
        
          <script>
            var ctx = document.getElementById("top-10-posicoes").getContext("2d");
            var top-10-posicoes = new Chart(ctx, {
              type:"horizontalBar",
              data:{
                labels: {{ labels | safe }},
                datasets: [
                  {
                    axis: 'y',
                    label: "Data points",
                    data: {{ values | safe }}, 
                    fill: false,
                    backgroundColor: [
                      "rgba(39, 0, 230, 0.8)", 
                      "rgba(39, 30, 230, 0.8)", 
                      "rgba(39, 60, 230, 0.8)",
                      "rgba(39, 90, 230, 0.8)",
                      "rgba(39, 120, 230, 0.8)",
                      "rgba(39, 150, 230, 0.8)",
                      "rgba(39, 180, 230, 0.8)",
                      "rgba(39, 210, 230, 0.8)",
                      "rgba(39, 240, 230, 0.8)",
                      "rgba(39, 270, 230, 0.8)",
                    ],
                  }
                ]
              },
              options:{
                responsive: true,
                aspectRatio: 1,
                maintainAspectRatio: false
              }
            }
            )
          
          var ctx1 = document.getElementById("nivel-profissional").getContext("2d");
            var nivel-profissional = new Chart(ctx1, {
              type:"doughnut",
              data:{
                labels: {{ labels1 | safe }},
                datasets: [
                  {
                    axis: 'y',
                    label: "Data points",
                    data: {{ values1 | safe }}, 
                    fill: false,
                    backgroundColor: [
                      "rgba(39, 0, 230, 0.8)", 
                      "rgba(39, 30, 230, 0.8)", 
                      "rgba(39, 60, 230, 0.8)",
                      "rgba(39, 90, 230, 0.8)",
                      "rgba(39, 120, 230, 0.8)",
                      "rgba(39, 150, 230, 0.8)",
                      "rgba(39, 180, 230, 0.8)",
                      "rgba(39, 210, 230, 0.8)",
                      "rgba(39, 240, 230, 0.8)",
                      "rgba(39, 270, 230, 0.8)",
                    ],
                  }
                ]
              },
              options:{
                responsive: true,
                aspectRatio: 1,
                maintainAspectRatio: false
              }
            }
            )
          </script>        
        </div>
        <div class="m-2 gap-1 drop-shadow-lg bg-white flex items-center rounded-2xl">tabela historica</div>
      </main>
    </section>
    <footer class="h-8 border">footer</footer>
</body>

</html>
